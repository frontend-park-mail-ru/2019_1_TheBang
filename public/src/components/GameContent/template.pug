.frame
    .header
        .frame__buttons
            include /pug-mixins/link/link.pug
            +link('', '', 'home')
        .frame__game-info
            .frame__user-info
                .frame__avatar
                p=nickname
            .info
            .frame__score
                    .block.diamond
                    .diamond-count
        .frame__help Keys: &larr; &rarr; &uarr; &darr;
    .game-container
        .frame__space
            include /pug-mixins/left-board/left-board.pug
            +left-board()
        .board
        .frame__space
            include /pug-mixins/right-board/right-board.pug
            +right-board()
    .frame__footer
        .frame__show
            include /pug-mixins/link/link.pug
            +link('', '', 'home')
    .frame__controlls
        include /pug-mixins/controlls/controlls.pug
        +controlls()
